{
    "compilerOptions": {
      "lib": ["es7"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2021",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "types" : [ "node" ]
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      "coverage",
      ".vscode/**/*"
    ]
  }
  